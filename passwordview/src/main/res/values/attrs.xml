<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseInputView">
        <attr name="box_width" format="dimension"/>
        <attr name="box_height" format="dimension"/>
        <attr name="box_count" format="integer"/>
        <attr name="box_margin" format="dimension"/>
        <attr name="box_corner" format="dimension"/>
        <attr name="box_style_type" format="enum">
            <enum name="fill" value="1"/>
            <enum name="stroke" value="2"/>
            <enum name="underline" value="3"/>
        </attr>
        <attr name="box_fill_color" format="color"/>
        <attr name="box_stroke_color" format="color"/>
        <attr name="box_stroke_width" format="dimension"/>
        <attr name="box_underline_color" format="color"/>
        <attr name="box_underline_height" format="dimension"/>
        <attr name="input_text_size" format="dimension"/>
        <attr name="input_text_color" format="color"/>

        <attr name="cursor_type" format="enum">
            <enum name="cursor_type_line" value="1"/>
            <enum name="cursor_type_follow_box" value="2"/>
        </attr>
        <attr name="cursor_height" format="dimension"/>
        <attr name="cursor_width" format="dimension"/>
        <attr name="cursor_color" format="color"/>
        <attr name="cursor_twinkle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="pwd_cover_type" format="enum">
            <enum name="dot" value="1"/>
            <enum name="star" value="2"/>
        </attr>
        <attr name="pwd_cover_color" format="color"/>
        <attr name="pwd_cover_dot_radius" format="dimension"/>
        <attr name="pwd_cover_star_size" format="dimension"/>
    </declare-styleable>
</resources>